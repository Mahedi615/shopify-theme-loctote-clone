    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "text",
      "id": "collection_link",
      "label": "Collection Link",
      "default": "/collections/your-collection-handle"
    }, {
      "type": "image_picker",
      "id": "bags_image",
      "label": "bags_image"
    }, {
      "type": "image_picker",
      "id": "acc_image",
      "label": "acc_image"

    }, {
      "type": "image_picker",
      "id": "locks_image",
      "label": "locks_image"
    }
  ]
}
{% endschema %}