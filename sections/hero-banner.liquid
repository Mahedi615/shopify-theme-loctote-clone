<div class="grid grid-cols-2 gap-0">
  <div class="hero-left">
    <img
      class="h-32"
      src={{ section.settings.hero-left | img_url: 'large' }}
      alt="">
  </div>
  <div class="hero-right">
    <img
      class="h-32"
      src={{ section.settings.hero-right | img_url: 'large' }}
      alt="">
  </div>
</div>

{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero-left",
        "label": "hero-left"
      }, {
        "type": "image_picker",
        "id": "hero-right",
        "label": "hero-right"
      }
    ]
  }
{% endschema %}