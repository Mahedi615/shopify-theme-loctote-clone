<div class="grid grid-cols-3 gap-4">
  {% for product in collections.all.products limit: 3 %}
    <div class="bg-white rounded-lg p-4">
      <img
        src="{{ product.featured_image.src | img_url: 'medium' }}"
        alt="{{ product.title }}"
        class="w-full h-32 object-cover mb-4">
      <h2 class="text-lg font-bold">{{ product.title }}</h2>
      {% if product.variants.size > 1 %}
        <p class="text-sm">Available Variants:</p>
        <ul class="mt-2 flex justify-center items-center">
          {% for variant in product.variants %}
            <a href="#image" class="px-3"><img src="{{ variant.featured_media | img_url: 'small'  }}" alt=""></a>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  {% endfor %}
</div>